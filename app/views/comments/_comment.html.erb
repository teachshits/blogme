<div id="comment_<%= comment.id %>">
  <h3><%= comment.user.email.split('@')[0] %> <sup><%= l comment.created_at %></sup></h3>

  <% if can? :manage, comment %>
    <p>
      <%= link_to 'Edit comment', [:edit, comment], :remote => true %>

      <%= link_to 'Destroy comment', comment, :remote => true, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    </p>
  <% end %>

  <p><%= simple_format(comment.text) %></p>

  <hr>
</div>

